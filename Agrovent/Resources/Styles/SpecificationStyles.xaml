<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Agrovent.Views.Windows"
                    xmlns:converter="clr-namespace:Agrovent.Infrastructure.Converters"
                    >
                    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="PartComponentStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <converter:AGR_ComponentTypeConverter x:Key="ComponentTypeConverter"/>
    <converter:GroupHeaderColorConverter x:Key="GroupHeaderColorConverter"/>


    <!-- Стиль для центрированного текста -->
    <Style x:Key="CenterAlignedTextStyle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Стиль для центрированного текста -->
    <Style x:Key="VerticalAlignedTextStyle" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Стиль для окна спецификации -->
    <Style x:Key="SpecificationWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="Foreground" Value="#212121"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="ResizeMode" Value="CanResizeWithGrip"/>
        <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
    </Style>

    <!-- Стиль для заголовка окна -->
    <Style x:Key="WindowHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="#1976D2"/>
        <Setter Property="Padding" Value="16,12"/>
    </Style>

    <!-- Стиль для DataGrid спецификации -->
    <Style x:Key="SpecificationDataGrid" TargetType="DataGrid">
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="SelectionUnit" Value="FullRow"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="RowBackground" Value="White"/>
        <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="RowHeight" Value="32"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ColumnHeaderStyle" Value="{StaticResource PropertiesDataGridHeader}"/>
    </Style>

    <!-- Стиль для группового заголовка -->
    <Style x:Key="GroupHeaderStyle" TargetType="GroupItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GroupItem}">
                    <Expander IsExpanded="True" 
                              Background="{Binding Source={StaticResource AssembliesColor}}"
                              BorderBrush="#BDBDBD"
                              BorderThickness="0,0,0,1">
                        <Expander.Header>
                            <DockPanel>
                                <TextBlock FontWeight="SemiBold"
                                           FontSize="14"
                                           Text="{Binding Name, Converter={StaticResource ResourceKey=ComponentTypeConverter}}"
                                           Margin="10,5,5,5"
                                           Foreground="#212121"/>
                                <TextBlock FontWeight="Bold" 
                                           Margin="0 5"
                                           FontSize="14"
                                           Text="{Binding ItemCount, StringFormat='({0})'}"
                                           Foreground="#616161"/>
                            </DockPanel>
                        </Expander.Header>
                        <ItemsPresenter />
                    </Expander>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для кнопок действий -->
    <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Width" Value="120"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Margin" Value="8,0,0,0"/>
        <Setter Property="Padding" Value="12,4"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#212121"/>
    </Style>

    <!-- Стиль для панели статистики -->
    <Style x:Key="StatsPanelStyle" TargetType="WrapPanel">
        <Setter Property="Margin" Value="0,12,0,0"/>
    </Style>

    <!-- Стиль для пустой спецификации -->
    <Style x:Key="EmptySpecificationStyle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#9E9E9E"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="20"/>
    </Style>

</ResourceDictionary>